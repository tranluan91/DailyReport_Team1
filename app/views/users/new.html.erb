<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
      <%= f.label :email %>
      <%= f.text_field :email, :placeholder => "nguyen.van.a@framgia.com" %>
      <% pass = SecureRandom.urlsafe_base64(6) %>
      <%= f.hidden_field :password, :value => pass %>
      <%= f.hidden_field :password_confirmation, :value => pass %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
